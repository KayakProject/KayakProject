<?xml version="1.0" encoding="UTF-8"?>
<suite name="Kayak mobile suite">
    <parameter name="browserName" value="chrome"></parameter>
    <parameter name="platform" value="mobile"></parameter>
    <listeners>
        <listener class-name="listeners.Listeners"></listener>
    </listeners>

    <test name="Test affiliate network">
        <classes>
            <parameter name="platform" value="mobile"></parameter>
            <class name="tests.TestAffiliateNetwork"></class>
        </classes>
    </test>
    <test name="Test badges and certificates">
        <classes>
            <parameter name="platform" value="mobile"></parameter>
            <class name="tests.TestBadges"></class>
        </classes>
    </test>
    <test name="Test request booking receipt">
        <classes>
            <parameter name="platform" value="mobile"></parameter>
            <class name="tests.TestBookingReceipts"></class>
        </classes>
    </test>
    <test name="Test feedback about inaccuracies">
        <classes>
            <parameter name="platform" value="mobile"></parameter>
            <class name="tests.TestFeedbackInaccuracy"></class>
        </classes>
    </test>
</suite>
